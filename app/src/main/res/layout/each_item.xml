<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rvContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardCornerRadius="15dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:backgroundTint="?attr/cardBackgroundColor"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:id="@+id/head_img"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/SoftCorner"
        android:src="@drawable/img1"
        />

        <TextView
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/roboto_condensed_bold"
            android:gravity="start"
            android:text="This is HEADLINE"
            android:textColor="?attr/colorOnBackground"
            android:textSize="19dp"
            android:textStyle="bold" />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="15dp"
         android:id="@+id/summary"
         android:textColor="?attr/colorOnBackground"
         android:layout_marginEnd="10dp"
         android:layout_marginStart="10dp"
         android:layout_marginBottom="5dp"
         android:text="@string/para"
         />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            >

        <ImageButton
            android:id="@+id/book_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/baseline_bookmark_24"
            android:layout_marginEnd="15dp"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_marginBottom="5dp"
            />
        <ImageButton
            android:id="@+id/book_unfill"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/baseline_bookmark_border_24"
            android:layout_marginEnd="15dp"
            android:layout_gravity="end"
            android:layout_marginBottom="5dp"
            />

            <ImageButton
                android:id="@+id/share_btn"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/baseline_share_24"
                android:layout_marginEnd="15dp"
                android:layout_gravity="end"
                android:layout_marginBottom="5dp"
                />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>